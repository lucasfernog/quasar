{
  "mixins": [ "mixins/checkbox" ],

  "props": {
    "icon": {
      "extends": "icon"
    },

    "checked-icon": {
      "type": "String",
      "desc": "The icon to be used when the toggle is on",
      "examples": [ "visibility" ],
      "category": "content"      
    },

    "unchecked-icon": {
      "type": "String",
      "desc": "The icon to be used when the toggle is off",
      "examples": [ "visibility_off" ],
      "category": "content"
    }
  },
  "css": {
    "toggle-transition": {
      "desc": "",
      "type": "Transition",
      "value": ".22s cubic-bezier(.4,0,.2,1)",
      "category": "Animation",
      "affects": [{
        "selector": "",
        "property": ""
      }]
    },
    "primary": {
      "desc": "",
      "extends": "primary"
    },
    "option-focus-transition": {
      "desc": "",
      "extends": "option-focus-transition",
      "affects": [{
        "selector": "",
        "property": ""
      }]
    }
  }
}
